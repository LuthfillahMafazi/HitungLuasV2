<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MenuActivity"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:text="Silahkan pilih bangun datar"
        android:layout_gravity="center"
        android:textSize="15dp"
        android:textStyle="bold"
        android:layout_marginTop="40dp" />

    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="25dp"
        android:textColor="#fff"
        android:text="Persegi"
        android:background="@color/colorButton"
        android:onClick="luasPersegi"/>



    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="25dp"
        android:textColor="#fff"
        android:text="Persegi Panjang"
        android:background="@color/colorButton"
        android:onClick="luasPersegiPanjang"/>

    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="25dp"
        android:textColor="#fff"
        android:text="Lingkaran"
        android:background="@color/colorButton"
        android:onClick="luasLingkaran"/>

    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="25dp"
        android:textColor="#fff"
        android:text="Segitiga"
        android:background="@color/colorButton"
        android:onClick="luasSegitiga"/>
</LinearLayout>